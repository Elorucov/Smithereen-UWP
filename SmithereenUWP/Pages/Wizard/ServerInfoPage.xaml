<Page
    x:Class="SmithereenUWP.Pages.Wizard.ServerInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmithereenUWP.Pages.Wizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid MaxHeight="480" MaxWidth="480" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Padding="0,0,0,12">
            <TextBlock x:Name="ServerName" Style="{StaticResource TitleTextBlockStyle}" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="Domain" Style="{StaticResource BaseTextBlockStyle}" TextAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <RichTextBlock x:Name="ShortDesc" TextWrapping="Wrap" Margin="0,0,0,12"/>
                <HyperlinkButton Content="{x:Bind Converter={StaticResource L}, ConverterParameter=about_server}"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2">
            <Button x:Name="LogInButton" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch" Content="{x:Bind Converter={StaticResource L}, ConverterParameter=log_in}" Click="OpenExternalAuth"/>
        </StackPanel>
    </Grid>
</Page>
