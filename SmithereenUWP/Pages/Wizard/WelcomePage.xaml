<Page
    x:Class="SmithereenUWP.Pages.Wizard.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmithereenUWP.Pages.Wizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="12" VerticalAlignment="Center" MaxWidth="480">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}" TextAlignment="Center" TextWrapping="Wrap" Text="Welcome to Smithereen UWP!"/>
            <TextBlock/>
            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Enter a server URL to get started:"/>
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ServerUrlBox" PlaceholderText="ex. friends.grishka.me" IsSpellCheckEnabled="False" KeyDown="OnKeyDown"/>
                <Button x:Name="CheckButton" Grid.Column="1" Style="{StaticResource AccentButtonStyle}" Margin="6,0,0,0" HorizontalAlignment="Stretch" Content="Continue" Click="ContinueClick"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
