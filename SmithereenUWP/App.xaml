                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="VerticalTabsGVStyle" TargetType="GridView">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="MinWidth" Value="0" />
                <Setter Property="MinHeight" Value="0" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource VerticalTabsGVIStyle}"/>
                <Setter Property="ItemsPanel">
