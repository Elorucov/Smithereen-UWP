                <Setter Property="Margin" Value="6,0" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="MinHeight" Value="42" />
                <Setter Property="Foreground" Value="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
